<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" layout="2columns-right">
    <head>
        //定义页面头部标题
        <title>Hello World</title>
        //引入web/css下的css文件,会自动生产css文件,路径magento目录/pub/static/frontend/Magento/luma/en_US/Silk_Test/css/helloworld.css
        <css src="Silk_Test::css/helloworld.css"/>
        <script src="Silk_Test::js/helloworld.js"></script>
    </head>

    <body>
        <referenceContainer name="content">
            <block class="Silk\Test\Block\Hello" name="hello" template="helloworld.phtml">
            </block>
            <block class="Silk\Test\Block\Hello" name="hello2" template="helloworld2.phtml">
            </block>
        </referenceContainer>
    </body>
</page>